    <title>Register | CircleKita</title>
    <link rel="stylesheet" href="/style.css" />
    <%- include('_fonts') %>
  </head>
  <body>
    <%- include('_navbar') %>

    <div class="register-page">
      <div class="header">
        <h1>Selamat Datang di</h1>
        <img src="/assets/circlekitalogo.png" alt="" />
      </div>

      <% if (error) { %>
      <div class="error-alert-register">
