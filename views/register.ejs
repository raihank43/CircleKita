          <label>Password</label><br />
          <input type="password" name="password" /><br />

      <label>Role</label><br />
      <input type="text" name="role" /><br />

      <label for="profileImage">Profile Image:</label>
      <input type="file" name="profileImage" accept="image/*" required />
