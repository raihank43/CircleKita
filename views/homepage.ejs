<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CircleKita</title>
    <link rel="stylesheet" href="/style.css" />
    <%- include('_fonts') %>
  </head>
  <body>
    <%- include('_navbarhomepage') %>

    <form action="" method="POST" enctype="multipart/form-data">
    <div class="post-form">
      <form method="post">
        <div class="user-info">
          <img class="profile-pic" src="/profilePicture/<%= user.Profile.profilePicture %>" alt="" />
          <span class="username"><%= user.username %></span>
        </div>
        <input type="text" name="title" placeholder="Title">
        <textarea name="content" placeholder="What's happening?"></textarea>
        <label for="filePosts">Post File</label>
        <input type="file" name="filePosts" accept="image/*"/>
        <input type="submit" value="Post" />
      </form>
    </div>
  </form>

    <div class="feed">


      </div>

      <% dataPosts.forEach(element => { %>
        <div class="feed-posts">
          <div class="post-desc">
            <img class="profile-pic" <%- !element.User.Profile || !element.User.Profile.profilePicture ? 'src="/assets/empty-profile.png"' : `src="/profilePicture/${element.User.Profile.profilePicture}"` %> alt="" />
            <p class="post-name"><%= element.User.username %></p>
            <p class="post-date"><%= formatTime(element.createdAt) %></p></p>
          </div>
          <div class="post-content">
            <h2><%= element.title %></h2>
            <p>
              <%= element.content %>
            </p>
            <img src="/file-posts/<%= element.filePosts %>" alt="" class="post-img" />
            <!-- <img src="file-posts/filePosts-1708594674667.png" alt="" class="post-img" /> -->

            <div class="post-footer">
              <button class="like-button">
                  <img src="path/to/like-icon.png" alt="Like" class="likes-logo" />
              </button>
              <p class="post-likes" id="post-likes"><%= element.likes %></p>
          </div>
            
          </div>
        </div>
        <% }) %>
    </div>
    



    </div>

  </body>
</html>
