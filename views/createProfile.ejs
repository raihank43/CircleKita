<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Profile</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('_navbarhomepage') %>

    <div class="form-login">
      <h1>Create New Profile</h1>
      <div class="error-alert-register"></div>

      <div>
        <form action="" enctype="multipart/form-data" method="post">
          <label>Full Name</label><br />
          <input type="text" name="fullName" /><br />

          
          <div>
            <% if (error) { %> <% const errorSplit = error.split(",") %>
              <p style="color: red; font-weight: bold;">
            <%= errorSplit.find((el)=> el.includes('Name')) %>
          </p>
          <% } %>
          </div>
          

          <label>Phone Number</label><br />
          <input type="text" name="phoneNumber" /><br />

          <% if (error) { %> <% const errorSplit = error.split(",") %>
          <div>
              <p style="color: red; font-weight: bold;">
            <%= errorSplit.find((el)=> el.includes('Phone')) %>
          </p>
          </div>
          <% } %>

          <label>Address</label><br />
          <input type="text" name="address" /><br />

          <% if (error) { %> <% const errorSplit = error.split(",") %>
          <div>
              <p style="color: red; font-weight: bold;">
            <%= errorSplit.find((el)=> el.includes('Address')) %>
          </p>
          </div>
          <% } %>

          <label>Upload Profile Picture</label><br />
          <input type="file" name="profileImage" accept="image/*" required />
          <br />

          <input type="submit" value="Submit" />
        </form>
      </div>
    </div>
  </body>
</html>
